@using ValidacaoExcecoes.Application.ViewModels.UserModels
@model UserCreateModel

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="color: black;">
        @TempData["MensagemErro"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×
        </button>
    </div>
}
<h3>
    Registre-se
</h3>
<hr />
<form asp-action="Create" asp-controller="User" method="post" class="form-horizontal" role="form">
    <div class="row">

        <div class="form-group col-md-4 d-flex flex-column">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4 d-flex flex-column">
            <label asp-for="DataNascimento" class="control-label"> Data de Nascimento </label>
            <input asp-for="DataNascimento" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="CPF" class="control-label">CPF</label>
            <input asp-for="CPF" class="form-control" />
            <span asp-validation-for="CPF" class="text-danger"></span>
        </div>
    </div>
    
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="ConfirmacaoSenha" class="control-label">Digite a senha novamente:</label>
            <input asp-for="ConfirmacaoSenha" class="form-control" />
            <span asp-validation-for="ConfirmacaoSenha" class="text-danger"></span>
        </div>
    </div>
    
    <br />
    
    <div class="row">
        <div class="btn-group">
            <div>
                <input class="btn btn-success" type="submit" value="Cadastrar" />
            </div>
            &nbsp;&nbsp;&nbsp;
            <div>
                <input class="btn btn-outline-info" asp-controller="User" asp-action="Index" value="Voltar ao inicio" />
            </div>
        </div>

    </div>
</form>